<h2> Blog </h2>
<ul>
  <% @blogs.each do |blog| %>
    <li>
      <%= blog.header %>
      <%= link_to 'Comment', new_blog_comment_path(blog), class: 'btn btn-sm btn-success' %>
      <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-sm btn-primary' %>
      <%= link_to 'Delete', blog_path(blog), method: :delete, class: 'btn btn-sm btn-danger' %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add blog', new_blog_path %>
